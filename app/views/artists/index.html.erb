

<div class="container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Artistas</h1>
			<div class="text-right">
				<%= link_to "Publicar artista", new_artist_path, class:"btn btn-primary" %>
			</div>
			<table class="table">
				<rt>
					<th>Id</th>
					<th>Nombre</th>
					<th>Url</th>
					<th></th>
				</rt>
				<% @artists.each do |artist| %>
			      <tr>
			      	<td><%= artist.id %></td>
			      	<td><%= link_to artist.name, artist %></td>
					<td>
			      	    <div class="img-responsive"><img src="<%= artist.image_url %>"></div>
			      	</td>
			      	<td><%= link_to "Editar", edit_artist_path(artist) %>  </td>
			      </tr>
				<% end %>
			</table>
		</div>
	</div>
</div>

